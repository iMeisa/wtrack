{{template "public" .}}

{{define "title"}}site template{{end}}

{{define "content"}}
    <div class="container">

        <table class="table table-dark table-striped table-bordered">
            <thead>
            <tr>
                <th colspan="2">Reserves</th>
            </tr>
            </thead>

            <tbody>
            <tr>
                <td>Diamonds</td>
                <td>15.895g</td>
            </tr>
            <tr>
                <td>Key Lime</td>
                <td>12.578g</td>
            </tr>
            </tbody>
        </table>

        <table class="table table-dark table-striped table-bordered">

            <thead>
            <tr>
                <th colspan="3">Usage</th>
            </tr>
            <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Type</th>
            </tr>
            </thead>

            <tbody>
            {{range .Records}}

                <tr>
                    <td class="date">{{.Date.Month}} {{.Date.Day}}</td>
                    <td>{{format .Amount}}g</td>
                    <td>{{.Strain.Name}}</td>
                </tr>

            {{end}}
            </tbody>

        </table>

        <button class="btn btn-outline-success mb-4">Add</button>

    </div>
{{end}}


{{define "css"}}
    <style>

        .date {
            text-align: right;
        }

        td {
            width: 33%;
        }

    </style>
{{end}}


